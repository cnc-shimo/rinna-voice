extends layout

block content
  div.wrapper
    section.top
      header
        nav.transparent
          div.nav-wrapper
            div.container
              a(href='#').brand-logo.center
                span.nav-title りんなボイス
      main
        div.container
          span.white-text.catchphrase 僕は女子高生と話がしたいんだ。
          div.center-align
            a(href="#").arrow
              span

    section.chat
      main
        div.container
          div#title-frame.white
            h4.center-align りんな

          div#chat-frame.center-align.white
            p.chat-talk
              span.talk-icon
                img(src="./images/me.png" alt="me").icon
              span.talk-content.grey.lighten-3.left-align
                a(href='https://twitter.com/rinna_voice') りんなボイスのアカウント

            p.chat-talk.rinna
              span.talk-icon
                img(src='./images/rinna.jpg' alt="rinna").icon
              span.talk-content.green.accent-1.right-align
                a(href='https://twitter.com/ms_rinna') りんなのアカウント

          div#input-frame.white
            div.input-text
              div.input-field.input-field-width
                i.material-icons.prefix mode_edit
                input#message(type='text')
